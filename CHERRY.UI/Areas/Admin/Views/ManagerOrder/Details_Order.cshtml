@using CHERRY.DAL.Entities
@using CHERRY.UI.Areas.Admin.Models;
@using CHERRY.Utilities
@{
    ViewData["Title"] = "Details_Order";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
@model ModelCompositeShare
<style>
    .sherah-body {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .sherah-body h3 {
            color: #007bff;
            margin-bottom: 15px;
        }

    table {
        background-color: white;
        border-collapse: collapse;
    }

        table th, table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        table th {
            background-color: #007bff;
            color: black;
        }

    .text-black {
        color: black;
    }
    /* Thêm CSS cho DataTables nếu cần */
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        color: #007bff !important;
        background-color: white;
        border: 1px solid #007bff;
        border-radius: 4px;
        margin-left: 3px;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background-color: #007bff;
            color: white !important;
        }
</style>

<section class="sherah-adashboard sherah-show">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sherah-body">
                    <div class="order-info">
                        <h3>Thông tin Đơn Hàng</h3>
                        <p>ID Đơn Hàng: @Model.OrderVM.ID</p>
                        <p>Địa chỉ Giao Hàng: @Model.OrderVM.ShippingAddress</p>
                        <p>Tổng tiền: @Currency.FormatCurrency(Model.OrderVM.TotalAmount.ToString()) vnđ</p>
                        <p>
                            Trạng thái đơn hàng:
                            @switch (Model.OrderVM.OrderStatus)
                            {
                                case OrderStatus.Pending:
                                    <span>Chưa giải quyết</span>
                                    break;
                                case OrderStatus.Processing:
                                    <span>Xử lý</span>
                                    break;
                                case OrderStatus.Shipped:
                                    <span>Đã vận chuyển</span>
                                    break;
                                case OrderStatus.Delivered:
                                    <span>Đã giao hàng</span>
                                    break;
                                case OrderStatus.Cancelled:
                                    <span>Đã hủy</span>
                                    break;
                                case OrderStatus.Returned:
                                    <span>Trả lại</span>
                                    break;
                                default:
                                    <span>Không xác định</span>
                                    break;
                            }
                        </p>
                    </div>

                    <!-- Hiển thị chi tiết đơn hàng -->
                    <div>
                        <h3>Chi Tiết Đơn Hàng</h3>
                        <table id="orderDetailsTable" class="table">
                            <thead>
                                <tr>
                                    <th>Mã Sản Phẩm</th>
                                    <th>Số Lượng</th>
                                    <th>Giá</th>
                                    <th>Tổng giá</th>
                                    <!-- Các trường khác -->
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.LstOrderVariantVM)
                                {
                                    <tr>
                                        <td>@detail.IDOptions</td>
                                        <td>@detail.Quantity</td>
                                        <td>@Currency.FormatCurrency(detail.UnitPrice.ToString()) vnđ</td>
                                        @{
                                            var totalPrice = detail.UnitPrice * detail.Quantity;
                                        }
                                        <td>@Currency.FormatCurrency(totalPrice.ToString()) vnđ</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#orderDetailsTable').DataTable();
        });
    </script>
}
