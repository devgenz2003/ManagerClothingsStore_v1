@using CHERRY.UI.Areas.Admin.Models
@model ModelCompositeShare
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="dataTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                UserName
            </th>
            <th>
                Họ và tên
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Trạng thái
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LstUser)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "ManagerUser", new { IDUser = item.ID })" class="btn btn-info btn-sm">@item.ID</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstAndLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @if (item.Gender == 0)
                    {
                        <span>Nữ</span>
                    }
                    else if (item.Gender == 1)
                    {
                        <span>Nam</span>
                    }
                </td>
                <td>
                    @if (item.Status == 0)
                    {
                        <span>Khoá</span>
                    }
                    else if (item.Status == 1)
                    {
                        <span>Hoạt động</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- CSS -->
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "paging": true, // Bật phân trang
            "lengthChange": true, // Cho phép thay đổi số lượng hàng trên mỗi trang
            "searching": true, // Cho phép tìm kiếm
            "ordering": true, // Cho phép sắp xếp
            "info": true, // Hiển thị thông tin số trang, số bản ghi, ...
            "autoWidth": true, // Tắt tự động điều chỉnh độ rộng cột
            // Thêm các tùy chọn khác theo nhu cầu của bạn
        });
    });
</script>
