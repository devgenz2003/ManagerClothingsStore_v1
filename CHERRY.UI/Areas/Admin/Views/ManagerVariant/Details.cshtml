@using CHERRY.UI.Areas.Admin.Models
@using CHERRY.Utilities
@model ModelCompositeShare
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
    decimal minPriceDecimal = Model.VariantsVM.Minprice; 
    double minPriceDouble = (double)minPriceDecimal; 
    decimal maxPriceDecimal = Model.VariantsVM.Maxprice; 
    double maxPriceDouble = (double)maxPriceDecimal; 
}

<style>
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* CSS cho thông tin biến thể */
    .variant-info {
        background-color: #fff;
        padding: 20px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

        .variant-info p {
            margin: 5px 0;
        }

    /* CSS cho slideshow ảnh sản phẩm */
    .product-slideshow {
        float: left;
        width: 50%;
        margin-right: 20px;
    }

        .product-slideshow img {
            width: 100%;
            height: auto;
            display: block;
            margin-bottom: 10px;
            border-radius: 5px;
        }

    /* CSS cho bảng tùy chọn */
    .options-table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }

        .options-table th,
        .options-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .options-table th {
            background-color: #f2f2f2;
        }

    .option-image img {
        width: 50px;
        height: 70px;
        border-radius: 5px;
    }

    .info-label {
        font-weight: bold;
        color: #ff5733;
        margin-right: 5px;
    }

    .amount-display,
    .amount-text {
        white-space: nowrap;
        font-size: 1em;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .amount-text {
        color: #6c757d;
        font-size: 0.8em;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-menu {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

        .dropdown-menu a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu a:hover {
        background-color: #ddd;
    }

    .btn-primary.dropdown-toggle {
        background-color: #6c7ae0;
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        color: white;
    }

    /* Feedback CSS */
    .feedback-section {
        margin-top: 30px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
    }

        .feedback-section h2 {
            font-size: 24px;
            margin-bottom: 15px;
        }

    .feedback-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 20px;
        padding: 15px;
        background-color: #f9f9f9;
    }

        .feedback-card h5 {
            margin-bottom: 10px;
        }

        .feedback-card p {
            margin-bottom: 5px;
        }

        .feedback-card small {
            color: #777;
        }
</style>
<h1>Sản phẩm phân loại 1</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
            <div class="carousel-inner">
                @for (var i = 0; i < Model.VariantsVM.ImagePaths.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@Model.VariantsVM.ImagePaths[i]" class="d-block img-fluid" alt="...">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-md-6">
        <!-- Hiển thị thông tin biến thể -->
        <div class="variant-info">
            <h2>Thông tin sản phẩm</h2>
            <p><span class="info-label">ID:</span> @Model.VariantsVM.ID</p>
            <p><span class="info-label">Tên:</span> @Model.VariantsVM.VariantName</p>
            <p><span class="info-label">Mô tả:</span> @Model.VariantsVM.Description</p>

            <p class="price-info">
                <div class="amount-display">
                    <span class="info-label">Giá tối thiểu:</span>
                    @Currency.FormatCurrency(Model.VariantsVM.Minprice.ToString()) đ
                </div>
                <div class="amount-text">
                </div>
            </p>

            <p class="price-info">
                <div class="amount-display">
                    <span class="info-label">Giá tối đa:</span>
                    @Currency.FormatCurrency(Model.VariantsVM.Maxprice.ToString()) đ
                </div>
                <div class="amount-text">
                </div>
            </p>

            <p><span class="info-label">Số lượng:</span> @Currency.FormatCurrency(Model.VariantsVM.TotalQuantity.ToString())</p>
            <p><span class="info-label">Tổng phân loại:</span> @Model.VariantsVM.TotalOptions</p>
            <p><span class="info-label">Giảm giá( nếu có ):</span> @Model.VariantsVM.HasPromotions</p>
            <p>
                <a class="dropdown-item" href="@Url.Action("Edit", "ManagerVariant",new { ID = @Model.VariantsVM.ID })">Chỉnh sửa</a>
            </p>
        </div>
    </div>

</div>

@if (Model.LstOptionsVM != null)
{
    <div class="clear"></div> 
    <table class="options-table">
        <thead style="text-align: center">
            <tr>
                <th>ID</th>
                <th>Ảnh</th>
                <th>Kích cỡ</th>
                <th>Màu</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody style="text-align: center">
            @foreach (var option in Model.LstOptionsVM)
            {
                <tr>
                    <td style="max-width: 150px;"><a href="@Url.Action("Details","ManagerOptions", new { ID = option.ID })">@option.ID</a> </td>
                    <td>
                        <div class="option-image">
                            <img src="@option.ImageURL" alt="Image" />
                        </div>
                    </td>
                    <td style="max-width: 80px;">@option.SizeName</td>
                    <td style="max-width: 80px;">@option.ColorName</td>
                  
                    <td>
                        @Currency.FormatCurrency(option.RetailPrice.ToString()) vnđ
                       <small>| Giảm:( @Currency.FormatCurrency(option.DiscountedPrice.ToString()) đ)</small>
                    </td>
                    <td>@option.StockQuantity</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Select
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="@Url.Action("Details","ManagerOptions", new { ID = option.ID })">Chi tiết</a>
                                <a class="dropdown-item" href="@Url.Action("Edit", "ManagerOptions",new { ID = option.ID })">Chỉnh sửa</a>
                                <a class="dropdown-item" href="@Url.Action("Delete", new { ID = option.ID })">Xóa</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="feedback-section">
    <h2>Đánh giá và Phản hồi</h2>
    @if (Model.LstReviewVM != null && Model.LstReviewVM.Any())
    {
        @foreach (var review in Model.LstReviewVM)
        {
            <div class="feedback-card">
                <h5>@review.Username</h5>
                <p>@review.Content</p>
                <td>
                  @*   @if (!string.IsNullOrEmpty(review.ImagePaths))
                    {
                        <img src="@review.ImagePaths" alt="Review Image" />
                    }
                    else
                    {
                        <p>Không có ảnh được đính kèm cho đánh giá này.</p>
                    } *@
                </td>
                <p><small>Ngày đánh giá: @review.CreateDate.ToString("dd-MM-yyyy HH:mm")</small></p>
            </div>
        }
    }
    else
    {
        <p>Chưa có đánh giá nào cho sản phẩm này.</p>
    }
</div>