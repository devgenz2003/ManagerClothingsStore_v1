@using CHERRY.UI.Areas.Admin.Models
@model ModelCompositeShare
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="/css/Promotions/promotion_create.css" />
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<h4>Tạo voucher</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" id="myForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.VoucherCreateVM.Code" class="control-label">Mã</label>
                <input asp-for="@Model.VoucherCreateVM.Code" class="form-control" id="Code" />
                <span asp-validation-for="@Model.VoucherCreateVM.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.VoucherCreateVM.Name" class="control-label">Tên voucher</label>
                <input asp-for="@Model.VoucherCreateVM.Name" class="form-control" id="Name" />
                <span asp-validation-for="@Model.VoucherCreateVM.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.VoucherCreateVM.StartDate" class="control-label">Ngày bắt đầu</label>
                <input asp-for="@Model.VoucherCreateVM.StartDate" class="form-control" id="StartDate" />
                <span asp-validation-for="@Model.VoucherCreateVM.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.VoucherCreateVM.EndDate" class="control-label">Ngày kết thúc</label>
                <input asp-for="@Model.VoucherCreateVM.EndDate" class="form-control" id="EndDate" />
                <span asp-validation-for="@Model.VoucherCreateVM.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.VoucherCreateVM.Quantity" class="control-label">Số lượt sử dụng</label>
                <input asp-for="@Model.VoucherCreateVM.Quantity" class="form-control" id="Quantity" />
                <span asp-validation-for="@Model.VoucherCreateVM.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kiểu voucher</label>
                <div class="form-check">
                    <input asp-for="@Model.VoucherCreateVM.Type" class="form-check-input" type="radio" value="Giảm Phần Trăm" id="typePercentage">
                    <label class="form-check-label" for="typePercentage">Giảm phần trăm</label>
                </div>
                <div class="form-check">
                    <input asp-for="@Model.VoucherCreateVM.Type" class="form-check-input" type="radio" value="Giảm Tiền Mặt" id="typeCash">
                    <label class="form-check-label" for="typeCash">Giảm tiền mặt</label>
                </div>
                <span asp-validation-for="@Model.VoucherCreateVM.Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.VoucherCreateVM.MinimumAmount" class="control-label">Giá trị tối thiểu( sử dụng )</label>
                <input asp-for="@Model.VoucherCreateVM.MinimumAmount" class="form-control" id="MinimumAmount" />
                <span asp-validation-for="@Model.VoucherCreateVM.MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="labelForReducedValue" asp-for="@Model.VoucherCreateVM.ReducedValue" class="control-label">Giá trị giảm</label>
                <div class="input-group">
                    <input asp-for="@Model.VoucherCreateVM.ReducedValue" class="form-control" id="ReducedValue" />
                    <span id="reducedValueSuffix" class="input-group-text">...</span>
                </div>
                <span asp-validation-for="@Model.VoucherCreateVM.ReducedValue" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.VoucherCreateVM.IsActive" id="IsActive" /> Kích hoạt
                </label>
            </div>
            <div class="form-group">
                <label asp-for="@Model.VoucherCreateVM.Key" class="control-label">Từ khoá</label>
                <input asp-for="@Model.VoucherCreateVM.Key" class="form-control" id="Key" />
                <span asp-validation-for="@Model.VoucherCreateVM.Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" id="createButton" class="btn btn-primary">Lưu</button>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <div>Dành cho người dùng</div>
        <div>
            <input type="checkbox" id="checkAll"> Chọn tất cả
        </div>

        @foreach (var user in Model.LstUser)
        {
            <div class="variant-item">
                <input type="checkbox" class="productCheckbox" name="PromotionCreateVM.SelectedVariantIds" value="@user.ID">
                <div class="variant-info">
                    <span>@user.FirstAndLastName</span>
                    <span class="variant-detail">SKU: @user.UserName</span>
                </div>
            </div>
        }
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="/js/Voucher/voucher_create.js"></script>